<p id="notice"><%= notice %></p>

<h1>Vehicle Submodels</h1>

<table>
  <thead>
    <tr>
      <th>Vehicle model</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicle_submodels.each do |vehicle_submodel| %>
      <tr>
        <td><%= vehicle_submodel.vehicle_model %></td>
        <td><%= vehicle_submodel.name %></td>
        <td><%= link_to 'Show', vehicle_submodel %></td>
        <td><%= link_to 'Edit', edit_vehicle_submodel_path(vehicle_submodel) %></td>
        <td><%= link_to 'Destroy', vehicle_submodel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

