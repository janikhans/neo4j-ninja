<div class="col-md-12">
	<div class="content-box-large">
		<div class="panel-heading">
		<div class="panel-title">Vehicles</div>

		<div class="panel-options">
			<a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
			<a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
		</div>
	</div>
		<div class="panel-body">
			<table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Submodel</th>
            <th>Year</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @vehicles.each do |vehicle| %>
            <tr>
              <td><%= vehicle.id %></td>
              <td><%= vehicle.brand.name %></td>
              <td><%= vehicle.model.name %></td>
              <td><%= vehicle.submodel.name %></td>
              <td><%= vehicle.vehicle_year.year %></td>
              <td><%= link_to 'Show', vehicle %></td>
              <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
              <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
		</div>
	</div>
</div>
