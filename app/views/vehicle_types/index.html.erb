<div class="col-md-12">
	<div class="content-box-large">
		<div class="panel-heading">
		<div class="panel-title">Vehicle Types</div>

		<div class="panel-options">
      <%= link_to 'New Category', new_vehicle_type_path %>
			<a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
			<a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
		</div>
	</div>
		<div class="panel-body">
			<table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @vehicle_types.each do |vehicle_type| %>
            <tr>
              <td><%= vehicle_type.id %></td>
              <td><%= vehicle_type.parent_type.name + " >" unless vehicle_type.parent_id.nil? %> <%= vehicle_type.name %></td>
              <td><%= link_to 'Show', vehicle_type %></td>
              <td><%= link_to 'Edit', edit_vehicle_type_path(vehicle_type) %></td>
              <td><%= link_to 'Destroy', vehicle_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
		</div>
	</div>
</div>
