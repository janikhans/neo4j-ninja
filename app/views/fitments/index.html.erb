<div class="col-md-12">
	<div class="content-box-large">
		<div class="panel-heading">
		<div class="panel-title">Fitments</div>

		<div class="panel-options">
      <%= link_to 'New Fitment', new_fitment_path %>
			<a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
			<a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
		</div>
	</div>
		<div class="panel-body">
			<table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Part</th>
            <th>Vehicle</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @fitments.each do |fitment| %>
            <tr>
              <td><%= fitment.id %></td>
              <td><%= fitment.part.id %></td>
              <td><%= fitment.vehicle.id %></td>
              <td><%= link_to 'Show', fitment %></td>
              <td><%= link_to 'Edit', edit_fitment_path(fitment) %></td>
              <td><%= link_to 'Destroy', fitment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
		</div>
	</div>
</div>
