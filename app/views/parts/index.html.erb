<div class="col-md-12">
	<div class="content-box-large">
		<div class="panel-heading">
		<div class="panel-title">Parts</div>

		<div class="panel-options">
      <%= link_to 'New Part', new_part_path %>
			<a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
			<a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
		</div>
	</div>
		<div class="panel-body">
			<table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Part Number</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @parts.each do |part| %>
            <tr>
              <td><%= part.id %></td>
              <td><%= part.product.name %></td>
              <td><%= part.part_number %></td>
              <td><%= link_to 'Show', part %></td>
              <td><%= link_to 'Edit', edit_part_path(part) %></td>
              <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
		</div>
	</div>
</div>
